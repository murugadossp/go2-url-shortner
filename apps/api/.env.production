# Production Environment Configuration
ENVIRONMENT=production
LOG_LEVEL=INFO

# Firebase Configuration (will be set via Secret Manager)
FIREBASE_PROJECT_ID=go2-url-shortener
FIREBASE_SERVICE_ACCOUNT_JSON=
FIREBASE_STORAGE_BUCKET=go2-url-shortener.appspot.com

# External APIs (will be set via Secret Manager)
GOOGLE_SAFE_BROWSING_API_KEY=
SENDGRID_API_KEY=

# Application Settings
CORS_ORIGINS=https://go2.video,https://go2.tools,https://go2.reviews
ALLOWED_HOSTS=go2-api-asia-south1-run.app,go2.video,go2.tools,go2.reviews

# Security Settings
SECURE_COOKIES=true
HTTPS_ONLY=true

# Performance Settings
MAX_WORKERS=4
WORKER_TIMEOUT=300
KEEP_ALIVE=2

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Monitoring
ENABLE_METRICS=true
HEALTH_CHECK_PATH=/health